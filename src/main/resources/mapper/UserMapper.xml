<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.UserMapper">


    <select id="auth" parameterType="UserDTO" resultType="UserDTO">
        SELECT * FROM injoy.user
        WHERE username = #{username}
        AND
        password = #{password}
    </select>

    <select id="validate" parameterType="string" resultType="UserDTO">
        SELECT * FROM injoy.user
        WHERE username = #{username}
    </select>

    <insert id="register" parameterType="UserDTO">
        INSERT INTO injoy.user(username, password,email,name,role,phonenumber,crtndate,profilephoto,organid,provider,providerid,emailverified)
        VALUES(#{username},#{password},#{email},#{name},#{role},#{phoneNumber},#{crtnDate},#{profilePhoto},#{organId},#{provider},#{providerId},#{emailVerified})
    </insert>

    <insert id="authRegister" parameterType="UserDTO">
        INSERT INTO injoy.user(username, password)
        VALUES(#{username},#{password})
    </insert>

    <select id="selectAll" resultType="UserDTO">
        SELECT * FROM injoy.user
    </select>

    <update id="update" parameterType="UserDTO">
        UPDATE injoy.user
        SET
        password = #{password},
        nickname = #{nickname}
        WHERE
        id=#{id}
    </update>

    <select id="findOauthUser" parameterType="map" resultType="UserDTO">
        SELECT * FROM injoy.user
        WHERE provider = #{provider} AND providerid = #{providerId}
    </select>

</mapper>
